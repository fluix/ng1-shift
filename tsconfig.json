{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "types": [
      "reflect-metadata",
      "@types/angular",
      "@types/node"
    ]
  },
  "exclude": [
    "example",
    "test"
  ]
}
