{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "strict": true,
    "types": [
      "reflect-metadata",
      "@types/angular",
      "@types/node",
      "@types/jest"
    ]
  },
  "exclude": [
    "example",
    "test"
  ]
}
